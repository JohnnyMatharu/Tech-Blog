<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">Post</label>
      <input id="post-text" name="post-text" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{!-- check what is this --}}
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
      {{!-- check what is this --}}
    {{#each posts as |post|}}
    <li>
        {{!-- check what is this --}}
      {{> post-info post}}
      {{!-- check what is this --}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{!-- check what is this --}}
    {{/each}}
  </ol>
</section>
{{!-- check what is this --}}
{{/if}}

